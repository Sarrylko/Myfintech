# ─── General ──────────────────────────────────────────────
ENVIRONMENT=development          # development | production

# ─── Postgres (install locally or use a managed instance) ─
POSTGRES_USER=myfintech
POSTGRES_PASSWORD=CHANGE_ME_postgres
POSTGRES_DB=myfintech
DATABASE_URL=postgresql+asyncpg://myfintech:CHANGE_ME_postgres@localhost:5432/myfintech
DATABASE_URL_SYNC=postgresql://myfintech:CHANGE_ME_postgres@localhost:5432/myfintech

# ─── Redis (install locally or use a managed instance) ────
REDIS_URL=redis://localhost:6379/0

# ─── API ──────────────────────────────────────────────────
API_SECRET_KEY=CHANGE_ME_random_secret_key_64_chars
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Plaid ────────────────────────────────────────────────
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox                # sandbox | development | production

# ─── Property Valuation ──────────────────────────────────
PROPERTY_API_KEY=
PROPERTY_API_PROVIDER=           # provider name when configured

# ─── Encryption (for Plaid tokens at rest) ────────────────
ENCRYPTION_KEY=CHANGE_ME_fernet_key

# ─── Frontend ─────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=MyFintech

# ─── Domain (production) ─────────────────────────────────
DOMAIN=localhost
